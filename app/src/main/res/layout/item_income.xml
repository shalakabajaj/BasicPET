<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Income Title -->
        <TextView
            android:id="@+id/incomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Amount -->
        <TextView
            android:id="@+id/incomeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BDT 10,000"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/incomeDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-04-08"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Category -->
        <TextView
            android:id="@+id/incomeCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Freelance"
            android:textColor="#3F51B5"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/incomeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client payment for website design."
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Action Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/editIncome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Income"
                android:layout_marginEnd="16dp"
                android:tint="#2196F3" />

            <ImageView
                android:id="@+id/deleteIncome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Income"
                android:tint="#F44336" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
